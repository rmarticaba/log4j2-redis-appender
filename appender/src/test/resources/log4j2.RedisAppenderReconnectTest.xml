<Configuration name="RedisAppenderReconnectTest">
    <Appenders>
        <RedisAppender name="REDIS"
                       key="log4j2-messages"
                       host="localhost"
                       password="milonga"
                       port="63790"
                       ignoreExceptions="false">
            <PatternLayout pattern="%m"/>
            <RedisThrottlerConfig flushPeriodMillis="60000" batchSize="1"/>
        </RedisAppender>
    </Appenders>
    <Loggers>
        <Root level="all">
            <AppenderRef ref="REDIS"/>
        </Root>
    </Loggers>
</Configuration>
